{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "baseUrl": "./",
        "rootDir": "./src",
        "paths": {
            "@/*": ["src/*"],
            "@controllers/*": ["src/controllers/*"],
            "@middlewares/*": ["src/middlewares/*"],
            "@models/*": ["src/models/*"],
            "@routes/*": ["src/routes/*"],
            "@services/*": ["src/services/*"],
            "@utils/*": ["src/utils/*"]
        },
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
